{
  "compilerOptions": 
    {
      "outDir": "build",
      "target": "es2016",
      "declaration": false,
      "module": "commonjs",
      "strictNullChecks": true,
      "sourceMap": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "jsx": "react",
      "typeRoots": [ "src/typings", "./node_modules/@types"],
    },
  "include": ["src/**/*"],
  "exclude": ["node_modules"] 
} 